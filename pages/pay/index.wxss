/* pages/cart/index.wxss */
pages {
  padding-bottom: 90rpx;
}
.address_row .user_info_row {
  display: flex;
  padding: 15rpx;
}
.address_row .user_info_row .user_info {
  flex: 5;
  display: flex;
  flex-direction: column;
}
.address_row .user_info_row .user_info .user_name {
  font-size: 35rpx;
}
.address_row .user_info_row .user_info .user_detail {
  padding-top: 3rpx;
}
.address_row .user_info_row .use_phone {
  flex: 2;
}
.goods_title_wrap {
  font-size: 36px;
  color: var(--themecolor);
  border-bottom: 1px solid red;
  border-top: 1px solid red;
  padding: 5rpx;
}
.goods_detai {
  padding-top: 10rpx;
  display: flex;
  border-bottom: 1px solid #dedede;
}
.goods_detai .goods_chk {
  flex: 1;
  justify-content: center;
  align-items: center;
  display: flex;
}
.goods_detai .goods_img {
  flex: 3;
}
.goods_detai .goods_img image {
  width: 80%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 10rpx;
}
.goods_detai .goods_detail {
  flex: 4;
  padding-top: 30rpx;
}
.goods_detai .goods_detail .detail_goods {
  justify-content: center;
  align-items: center;
  display: flex;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.goods_detai .goods_detail .detail_detail_wrap {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
}
.goods_detai .goods_detail .detail_detail_wrap .detail_price {
  font-size: 34rpx;
  color: var(--themecolor);
}
.goods_detai .goods_detail .detail_detail_wrap .detail_num {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right: 10rpx;
}
.goods_detai .goods_detail .detail_detail_wrap .detail_num .detail_num_jian {
  border: 1rpx solid #666;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_detai .goods_detail .detail_detail_wrap .detail_num .detail_num_jian {
  border: 1rpx solid #666;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_bottom .bottom_check {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_bottom .bottom_price_all {
  flex: 4;
  padding-right: 20rpx;
  text-align: right;
}
.goods_bottom .bottom_price_all .price_all_wrap {
  display: flex;
  text-align: right;
  justify-content: flex-end;
  align-items: center;
}
.goods_bottom .bottom_price_all .price_all_wrap .price_price {
  color: var(--themecolor);
  font-size: 34rpx;
  font-weight: 600;
}
.goods_bottom .bottom_all {
  flex: 2;
  background: var(--themecolor);
  width: 100%;
  height: 90rpx;
  font-size: 36rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
