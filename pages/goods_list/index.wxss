.first_tap .goods_item {
  display: flex;
  border: 1px solid gray;
}
.first_tap .goods_item .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tap .goods_item .goods_img_wrap image {
  width: 70%;
}
.first_tap .goods_item .goods_info_wrap {
  flex: 3;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.first_tap .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tap .goods_item .goods_info_wrap .goods_price {
  color: var(--themecolor);
  font-size: 32rpx;
}
